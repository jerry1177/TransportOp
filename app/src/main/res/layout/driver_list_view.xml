<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/round_corners_list_item">

    <TextView
        android:id="@+id/driverCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/modelText"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/rubik_bold"
        android:text="company name"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/modelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/driverImage"
        android:fontFamily="@font/rubik_bold"
        android:text="Honda Civic"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/driverImage"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_below="@+id/driverCompanyName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/truck_image" />

    <TextView
        android:id="@+id/mpgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/driverImage"
        android:fontFamily="@font/rubik_regular"
        android:text="mil/g 20"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tankSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mpgText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/driverImage"
        android:fontFamily="@font/rubik_regular"
        android:text="tank size: 830 gal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dieselOnlyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tankSizeText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/driverImage"
        android:fontFamily="@font/rubik_regular"
        android:text="diesel only: yes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />


</RelativeLayout>